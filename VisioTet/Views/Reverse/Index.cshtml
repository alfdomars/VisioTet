@model string

@{
    ViewData["Title"] = "Reverse Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">String Reversal</h2>
                    <form asp-controller="Reverse" asp-action="Index" method="post">
                        <div class="form-group">
                            <label for="input">Enter a string to reverse:</label>
                            <input type="text" class="form-control" id="input" name="input" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Reverse</button>
                        </div>
                    </form>

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    @if (ViewData["ReversedString"] != null)
                    {
                        <h2 class="mt-3">Reversed String:</h2>
                        <p>@ViewData["ReversedString"]</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
