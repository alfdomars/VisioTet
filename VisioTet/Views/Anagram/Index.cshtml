@model string

@{
    ViewData["Title"] = "Anagram Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Check Anagrams</h2>
                    <form asp-controller="Anagram" asp-action="Index" method="post">
                        <div class="form-group">
                            <label for="firstWords">First Words:</label>
                            <input type="text" class="form-control" id="firstWords" name="firstWords" />
                        </div>
                        <div class="form-group">
                            <label for="secondWords">Second Words:</label>
                            <input type="text" class="form-control" id="secondWords" name="secondWords" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Check Anagrams</button>
                        </div>
                    </form>

                    @if (ViewData["AnagramResults"] != null)
                    {
                        <div class="mt-3">
                            <h2 class="text-center">Anagram Results:</h2>
                            <p class="text-center">@ViewData["AnagramResults"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
